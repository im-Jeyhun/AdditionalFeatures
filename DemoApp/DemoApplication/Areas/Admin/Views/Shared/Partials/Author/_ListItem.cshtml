@using DemoApplication.Areas.Admin.ViewModels.Author
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ListItemViewModel

<tr class="author-record" data-id="@Model.Id" >
    <td>@Model.FirstName</td>
    <td>@Model.LastName</td>
    <td class="text-end">
        <a asp-route="update-author" asp-route-id="@Model.Id" data-bs-toggle="modal" data-bs-target="#updateAuthorModal" class="btn btn-primary update-button">Update</a>
        <a asp-route="delete-author" asp-route-id="@Model.Id" class="btn btn-danger remove-button">Delete</a>
    </td>
</tr>