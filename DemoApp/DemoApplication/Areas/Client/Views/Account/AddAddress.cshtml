@model AddAddressViewModel
    
<div class="account-details-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <form method="POST" asp-route="client-account-add-address">

        <div class="col-12  mb--30">
            <h4>Add Address</h4>
        </div>
        <div class="col-12 col-lg-6 mb--30">
            <label asp-for="TakerName">Name of taker product</label>
            <input asp-for="TakerName" class="form-control">
            <span asp-validation-for="TakerName" class="text-danger"></span>
        </div>
        <div class="col-lg-6 col-12  mb--30">
            <label asp-for="TakerSurname">Surname of taker product</label>
            <input asp-for="TakerSurname" class="form-control">
            <span asp-validation-for="TakerSurname" class="text-danger"></span>
        </div>
        <div class="col-lg-6 col-12  mb--30">
            <label asp-for="Name">Full Address</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-lg-6 col-12  mb--30">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button class="btn btn--primary">Save Changes</button>
        </div>
    </form>
</div>